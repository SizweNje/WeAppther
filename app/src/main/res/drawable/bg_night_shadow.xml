<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:top="10dp"
    android:bottom="10dp"
    android:right="10dp"
    android:left="10dp"
    >
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"
        >
        <gradient
            android:angle="135"
            android:centerX="70%"
            android:endColor="#131313"
            android:startColor="@color/bg_row_background_left"
            android:type="linear" />

        <corners android:radius="10dp" />
    </shape>
</item>

<item
    android:left="0dp"
    android:right="0dp"
    android:top="0dp"
    android:bottom="2dp">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <gradient
            android:angle="135"
            android:centerX="70%"
            android:endColor="#131313"
            android:startColor="@color/black"
            android:type="linear" />

        <corners android:radius="10dp" />
    </shape>
</item>
</layer-list>